{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "module": "esnext",
        "declaration": true,
        "declarationDir": "dist/types",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "rootDirs":["src"],
        "incremental": true,
        "noImplicitAny": false,
        "paths": {
            "@/*": ["./src/*"]
        },
        "outDir": "dist"
        
    },
    "include": ["next-env.d.ts", "src"], 
    "exclude": ["node_modules", "dist"]
}